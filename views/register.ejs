<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[30vw]  bg-white px-20 py-10 rounded-md">
        <h1 class="text-3xl text-center font-semibold leading-none tracking-tighter capitalize">
           Create new account
        </h1>
        <form action="/register" method="post" class="my-6">
            <input class="border-4 rounded-md  block w-full px-3 py-2 mt-2" type="text" name="username" placeholder="Username">
            <input class="border-4 rounded-md  block w-full px-3 py-2 mt-2" type="email" name="email" placeholder="Email">
            <input class="border-4 rounded-md  block w-full px-3 py-2 mt-2" type="number" name="contact" placeholder="Contact">
            <input class="border-4 rounded-md  block w-full px-3 py-2 mt-2" type="password" name="password" placeholder="Password">
            <input class="border-2 rounded-full  block w-full px-3 py-2 mt-5 bg-[crimson] text-white rounded-full" type="submit" value="Create New Account">
            <p class="text-xs font-semibold text-zinc-700 mt-7 mx-auto text-center">
                By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection; Opens a new tab.
            </p>
            <a href="/register" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Already on Pinterest? Login</a>
        </form>
    </div>
</div>
<% include ./partials/footer.ejs %>